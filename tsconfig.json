{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "dist",
        "sourceMap": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["dist"]
}
